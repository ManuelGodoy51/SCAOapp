<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AgregarProductos">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Agregar Productos"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="305dp"
                    android:layout_height="wrap_content"
                    android:hint="Codigo de barra"
                    tools:ignore="TouchTargetSizeCheck"></EditText>

                <Button
                    android:layout_width="wrap_content"
                    android:text="Camara">

                </Button>
            </TableRow>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre producto"></EditText>

            <EditText
                android:id="@+id/editTextDate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fecha de recepcion"
                android:inputType="date" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numero guia de despacho"></EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marca"></EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cantidad"></EditText>

            <EditText
                android:id="@+id/editTextDate3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fecha de vencimiento"
                android:inputType="date" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lote"></EditText>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:text="Estado envase"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp">
                </TextView>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bueno">
                </RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malo">
                </RadioButton>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:text="Color adecuado"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp">
                </TextView>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SI">
                </RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO">
                </RadioButton>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:text="Textura adecuada"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp">
                </TextView>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SI">
                </RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO">
                </RadioButton>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:text="Olor adecuado"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp">
                </TextView>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SI">
                </RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO">
                </RadioButton>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:text="Aprovado o Rechazado"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp">
                </TextView>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A">
                </RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R">
                </RadioButton>
            </TableRow>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Accion correctiva"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Temperatura de recepcion"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Verificador"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ObservaciÃ³n"></EditText>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:text="Tipo de alimento"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"></TextView>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Spinner>
            </TableRow>

            <TextView
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="15sp"></TextView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>